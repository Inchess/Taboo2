<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_play_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="taboo2.taboo2.activities.PlayGameActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/score_green_team"
            style="@style/StartGame_team_points"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/team_scores_right_corners_rounded" />

        <TextView
            android:id="@+id/score_red_team"
            style="@style/StartGame_team_points"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/team_scores_left_corners_rounded" />

    </RelativeLayout>

    <TextView
        android:id="@+id/searchingWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"/>

    <View style="@style/Settings_line" />

    <TextView
        android:id="@+id/word1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/word2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/word3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/word4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/word5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/correct_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="correctAnswer" />

    <Button
        android:id="@+id/incorrect_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="incorrectAnswer" />

    <!--To remove at the end-->
    <Button
        android:id="@+id/change_team"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="endTurn" />

</LinearLayout>
